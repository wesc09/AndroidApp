<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBar.Solid.Openmrs" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_openmrs</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_openmrs</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_openmrs</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Openmrs</item>
    </style>
    <style name="ActionBar.Transparent.Openmrs" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_openmrs</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Openmrs</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="Platform.AppCompat" parent="Platform.V14.AppCompat"/>
    <style name="Platform.AppCompat.Light" parent="Platform.V14.AppCompat.Light"/>
    <style name="Platform.V14.AppCompat" parent="Platform.V11.AppCompat">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>

        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
    <style name="Platform.V14.AppCompat.Light" parent="Platform.V11.AppCompat.Light">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>

        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent" parent="@android:style/TextAppearance.StatusBar.EventContent"/>
    <style name="TextAppearance.StatusBar.EventContent.Info"/>
    <style name="TextAppearance.StatusBar.EventContent.Line2">
        <item name="android:textSize">@dimen/notification_subtext_size</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Time"/>
    <style name="TextAppearance.StatusBar.EventContent.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title"/>
    <style name="Theme.Openmrs" parent="@style/AppTheme">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_openmrs</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Openmrs</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Openmrs</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Openmrs</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Openmrs</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_openmrs</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_openmrs</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Openmrs</item>
        <item name="android:itemTextAppearance">@style/menuTextApearance</item>

                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Openmrs.Widget</item>

    </style>
    <style name="Theme.Openmrs.Widget" parent="Theme.AppCompat">
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Openmrs</item>
    </style>
</resources>